@import 'utils'

menu-width = 270px
column = 5.55555%

body
  position(absolute, 0, 0, 0, 0)
  background-image: linear-gradient(to bottom, rgba(0, 89, 204, 0.25), rgba(83, 185, 124, 0.25) 100%)
  background-repeat: no-repeat
  background-attachment: fixed


#container
  position(absolute, 0, 0, 0, 0)
  @media screen and (min-width: 60em)
    left: 5%
    right: 5%

#container.dev
  border: solid red 10px

#menu
  position(absolute, 0, 0, 0, 0, 270px)


#content-container
  position(absolute, 0, 0, 0, 0)
  transition: all 200ms ease-out
  transform: translate3d(0, 0, 0)
  background: #001f27
  opacity: 1
  color: white

  .page
    position(absolute, 0, 0, 0, 0)


  .content-scrollable
    position(absolute, 0, 0, 0, 0)
    transform: translate3d(0, 0, 0)
    overflow-y: auto
    -webkit-overflow-scrolling: touch


  // Toggle menu on mobile
  .menu-open &
    transform: translate3d(menu-width, 0, 0)
    opacity: .85
    left: 0

    @media screen and (min-width: 40em)
      // Show menu on desktop, negate .menu-open
      transform: translate3d(0, 0, 0) //reset transform and use position properties instead
      opacity: 1
      left: menu-width




// Transparent screen to prevent interactions on content when menu is open
.content-overlay
  position(absolute, 0, 0, 0, 0)
  cursor: pointer

  .menu-open &
    transform: translate3d(menu-width, 0, 0)
    z-index: 1


  // Hide overlay on desktop
  @media screen and (min-width: 40em)
    display: none

ol.breadcrumb
  padding: .5em 2em
  margin-bottom: 0px

.nav-group
  display: block
  position: absolute
  z-index: 10
  left: .5em
  top: 0
  transition: all ease-in 400ms
  .glyphicon
    padding: .5em
    margin: -.5em
    color: #8000a7

@keyframes pulse {
  0% {transform: scale(1);opacity:.9;}
  50% {transform: scale(1.1);opacity:1;}
  100% {transform: scale(1);opacity:.9;}
}
.pulse {
  animation-name: pulse;
  animation-duration: 1s;
  animation-iteration-count: infinite;
}

.loading
  margin-top: 20em

.nav-group.expanded
  transform: rotate(180deg)
  left: 240px !important

#nprogress
  .bar
    background-color: #22dd39
  .spinner
    display: none !important

.footer
  text-align: center
  opacity: .8
  font-size: .8em
  margin: 2em
  padding: 1em
  border: solid gray 1px
  color: black

#settingsPage
  display: block;
  opacity: 1;
  overflow: scroll;
  position: absolute;
  right: 0;
  left: 0;
  height: 100%;
  text-align: center;
  .title-message
    font-size: 2em
  p
    width: 20em
    margin: 0 auto
  h4
    margin: 1em
  .btn
    margin: 1em

::-webkit-scrollbar
    display: none

nav
  background: linear-gradient(to bottom, #d0edf5, #e1e5f0 100%)
  height: 5em
  color: black
  text-align: center
  @media screen and (min-width: 40em)
    text-align: left

  .title-page
    font-size: 1.125em; // 18px
    white-space: nowrap;
    margin: 0 1em

    .uploadHeaderBtn
      position: absolute;
      right: 2em;
      top: .5em;

    .title-wrapper {
      @extend .ellipsized;
      color: color-ancillary;
      display: inline-block;
      padding-right: 1.5rem;
      vertical-align: top;
      max-width: 100%;
    }

    .count-note {
      background: color-primary;
      border-radius: 1em;
      color: color-empty;
      display: inline-block;
      font-size: .7rem;
      line-height: 1;
      margin-left: -1.25rem;
      margin-top: 1em;
      padding: .3em .5em;
      vertical-align: middle;
    }

    .favorite
      position: absolute;
      right: 3.5em;
      top: .6rem;
      color: #808080
    .favorited
      color: #f33288;

  form.note-new {
    position(absolute, 3em, 0, auto, 0)

    input[type="text"] {
      background: transparent;
      padding-bottom: .25em;
      padding-left: 44px !important;
      padding-top: .25em;
    }
  }
  form.note-edit-form {
    position: relative;

    input[type="text"] {
      background: transparent;
      font-size: 1.125em; // 18px
      width: 100%;
      padding-right: 3em;
      padding-left: 1rem;
    }
  }

  select.note-edit
    @extend .font-s2;
    position(absolute, 0,0,0,0)
    background: transparent
    opacity: 0 // allows the cog to appear
    z-index: 100
  .progress
    margin-top: 3em
    height: 10px
