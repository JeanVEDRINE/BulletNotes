.tag-center  .title
    text-align: center
.tag-h1 .title
    font-size: 2em !important
.tag-h2 .title
    font-size: 1.5em !important
.tag-h3 .title
    font-size: 1.25em !important

.note-item
  border-left: solid 4px #fff
  font-size: 12px
  padding: 0px
  position: relative
  margin-bottom: 2px
  border-bottom: none !important
  line-height: 1.75
  .searchResult
    font-weight: bold
    font-size: 1.2em
    color: #41CAC0

  .favorite
    opacity: .1
    padding: .7em
    position: absolute
    right: 3em
    top: .7em
    cursor: pointer
    color: black
    transition: all 200ms ease-in;

  &.favorited
    .favorite
      opacity: 1
      color: #ff0072

  .handle
    position: absolute
    left: 2.5em
    top: 1em
    border-radius: 10px
    padding: 0.35em
    margin: -.35em
    text-decoration: none

  .progress
    margin: 10px 0 0

  .noteContainer
    padding: 10px 0 10px 5px

  @media screen and (min-width: 40em)
    .options:hover > ul.dropdown-menu
      display: block
      top: 2.2em

  .expand
    text-decoration: none
    font-weight: bold
    position: absolute
    top: .6em
    left: 0
    padding: .5em

  .expand.fa-angle-up:hover,
  .expand.fa-angle-down:hover

    border: dashed 1px red

  .expand.collapsed
    border: dashed 1px #777

  .title
    display: block
    font-size: 1.4em
    color: black
    min-width: 40%
    margin: -5px 5em 0 3em
    line-height: 1.75
  div.title:focus
      outline: none

  p
    margin: .5em .5em .5em 20px
    opacity: .8
    font-size: 1.2em
    color: black

  a
    cursor: pointer

  .thumb
    margin: -15px 0 0 25px

  .badge
    margin-right: .5em
    background: color-primary

  .dropdown-menu
    margin-top: -2px

.note-item.hasHiddenChildren
  .handle
    background-color: #d2d5ff

.note .favorite:hover
    color: #f78a09
    opacity: .7

.favorited .favorite, .favorited .favorite:hover
    color: #f78a09
    opacity: 1


.note.shared .fa-ellipsis-v
  border-color: purple


.tagLink, .atLink
  border-width: 1px
  padding: .1em .25em
  border-radius: 10px
  border-style: solid
  box-shadow: 1px 1px 2px #8e8e8e

.tagLink:hover, .atLink:hover
  box-shadow: 2px 2px 3px #8e8e8e

