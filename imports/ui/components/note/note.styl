.tag-center > .noteContainer   .title
    text-align: center
.tag-h1 > .noteContainer .title
    font-size: 2.25em !important
    font-weight: bold
.tag-h2 > .noteContainer  .title
    font-size: 2em !important
    font-weight: bold
.tag-h3 > .noteContainer  .title
    font-size: 1.75em !important
    font-weight: bold

.noteContainer.dragging
  border: dashed gray 1px

.note-item
  background: rgba(255,255,255,0.9)
  border-left: solid 4px #fff
  font-size: 12px
  padding: 0px
  position: relative
  margin-bottom: 2px
  border-bottom: none !important
  line-height: 1.75
  .mdl-badge.count
    margin-left: -1.5em;
    opacity: .7;

  .searchResult
    font-weight: bold
    font-size: 1.2em
    color: #41CAC0

  .favorite
    opacity: .1
    padding: .7em
    position: absolute
    right: 3em
    top: .7em
    cursor: pointer
    color: black
    transition: all 200ms ease-in;

  &.favorited
    .favorite
      opacity: 1
      color: #ff0072

  .handle
    cursor: move

  .hideContent, .showContent
    width: 101%;
    border-top: 1px solid gray;
    display: block;
    text-align: center;
    margin: 0.5em -3em -.5em -0.5em;
    color: #808080;
    opacity: 0.35;
    padding: .25em;

  .noteNumber
    display: none
    position: absolute
    color: #a7a7a7
    left: 1.5em
    font-size: 1.5em
    margin-top: -.25em

  .progress
    margin: 10px 0 0

  .noteContainer
    padding: 10px 0 10px 5px

  @media screen and (min-width: 40em)
    .options:hover > ul.dropdown-menu
      display: block
      top: 2.2em

  .title
    display: block
    font-size: 1.4em
    color: black
    min-width: 40%
    margin: -5px 5rem 0 3rem
    line-height: 1.75
  div.title:focus
      outline: none

  p
    margin: .5em .5em .5em 20px
    opacity: .8
    font-size: 1.2em
    color: black

  a
    cursor: pointer

  .thumb
    margin: -15px 0 0 25px

  .badge
    margin-right: .5em
    background: color-primary

  .dropdown-menu
    margin-top: -2px

@media screen and (min-width: 40em)
  .note .favorite:hover
    color: #f78a09
    opacity: .7

.favorited .favorite, .favorited .favorite:hover
    color: #f78a09
    opacity: 1

.tag-list ol
  .handle
    opacity: 0
  .noteNumber
    display: block

.note.shared .fa-ellipsis-v
  border-color: purple


.tagLink, .atLink
  border-width: 1px
  padding: .1em .25em
  border-radius: 10px
  border-style: solid
  box-shadow: 1px 1px 2px #8e8e8e

.tagLink:hover, .atLink:hover
  box-shadow: 2px 2px 3px #8e8e8e

