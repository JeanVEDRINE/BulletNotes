.tag-complete, .tag-done, .tag-finished
  .title
    text-decoration: line-through
    opacity: .5

#preview
  position:absolute
  border:1px solid #ccc
  background:#333
  padding:5px
  display:none
  color:#fff
  max-width: 400px
  img
    width: 100%

.note-item.shared
  .handle
    background: rgba(0, 128, 28, 0.16)

.note-item.noChildren
  .expand, .mdl-badge.count, .expand span
    opacity: 0
    cursor: default

.placeholder
  box-shadow: purple 0 0 5px 1px
  border: dashed gray 1px
  height 1em

#tagSearchPreview
  width: 500px
  li
    border-bottom: 1px solid lightgray
    color: black
    padding: 1em 1em
  li:last-child
    border-bottom: none
  .previewTagLink
    text-overflow: ellipsis
    overflow: hidden
  .tagLink
    display: inline
