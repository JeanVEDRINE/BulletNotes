.tag-center > .noteContainer > .note-title > .title
    text-align: center
.tag-h1 > .noteContainer > .note-title > .title
    font-size: 2.25em !important
    font-weight: bold
.tag-h2 > .noteContainer > .note-title > .title
    font-size: 2em !important
    font-weight: bold
.tag-h3 > .noteContainer > .note-title > .title
    font-size: 1.75em !important
    font-weight: bold

.title,
[contenteditable] {
    -webkit-user-select: text;
    user-select: text;
}

.noteContainer.dragging
  border: dashed gray 1px

.note-item .note-item
  background: none

.note-item
  font-size: 12px
  padding: 0px
  position: relative
  margin-bottom: 2px
  border-bottom: none !important
  line-height: 1.75
  clear: both

  .options
    margin: -5px 1em 0 0

  .mdl-badge.count
    margin-left: -1.5em;
    opacity: .7;

  .searchResult
    font-weight: bold
    font-size: 1.2em
    color: #41CAC0

  .favorite
    opacity: 0.1
    padding: .7em
    position: absolute
    right: 1em
    top: .3em
    cursor: pointer
    transition: all 200ms ease-in;
    margin-top: -.25em;

  .mdl-button--colored.favorite
      opacity: 1

  .handle
    cursor: move

  .hideContent, .showContent
    width: 101%;
    border-top: 1px solid gray;
    display: block;
    text-align: center;
    margin: 0.5em -3em -.5em -0.5em;
    color: #808080;
    opacity: 0.35;
    padding: .25em;

  .noteNumber
    display: none
    position: absolute
    color: #a7a7a7
    left: 1.5em
    font-size: 1.5em
    margin-top: -.25em

  .progress
    margin: 10px 0 0

  .noteContainer
    padding: 5px 0 5px 5px
    border-left: solid 4px rgba(0,0,0,0)
    border-right: solid 4px rgba(0,0,0,0)


  .title
    display: block
    font-size: 1.4em
    color: black
    min-width: 40%
    margin: -5px 5rem 0 6rem
    line-height: 1.75
  div.title:focus
      outline: none

  p
    margin: .5em .5em .5em 20px
    opacity: .8
    font-size: 1.2em
    color: black

  a
    cursor: pointer

  .thumb
    margin: -15px 0 0 25px

  .badge
    margin-right: .5em
    background: color-primary

  .dropdown-menu
    margin-top: -2px

.note.hasHiddenChildren .handle
  border: solid #999 2px;

.note .handle .material-icons
  font-size: .75em;

@media screen and (min-width: 40em)
  .note .favorite, .note .expand, .note .menuToggle
    opacity: 0
  .noteContainer:hover
    transition: all 0.2s ease
    > .favorite
      opacity: .1
    > .options > .expand, > .options > .menuToggle
      opacity: 1


  .note .favorite:hover
    color: rgb(255,87,34)
    opacity: .7

.note .favorite.mdl-button--colored, .mdl-button--colored.favorite:hover
    color: rgb(255,87,34)
    opacity: 1 !important

.tag-list ol
  .handle
    opacity: 0
  .noteNumber
    display: block

.note.shared .fa-ellipsis-v
  border-color: purple


