.tag-complete, .tag-done, .tag-finished
  .title
    text-decoration: line-through
    opacity: .5

#preview
  position:absolute
  border:1px solid #ccc
  background:#333
  padding:5px
  display:none
  color:#fff
  max-width: 400px
  img
    width: 100%

