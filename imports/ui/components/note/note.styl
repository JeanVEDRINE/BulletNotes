.note-item
  border-left: solid 4px #fff
  font-size: 12px
  padding: 0px
  position: relative
  margin-bottom: 2px
  border-bottom: none !important
  line-height: 1.75
  .searchResult 
    font-weight: bold
    font-size: 1.2em
    color: #41CAC0
    
  .favorite
    opacity: .1
    padding: .5em
    position: absolute
    right: 3em
    top: .7em
    cursor: pointer
    color: black

  &.favorited
    .favorite
      opacity: 1
      color: #ff0072

  .handle
    border-radius: 10px;
    padding: 0.35em;
    margin: -.35em;
    text-decoration: none;
  .progress 
    margin: 10px 0 0
  
  .noteContainer 
    padding: 10px 0 10px 5px
  
  @media screen and (min-width: 40em) 
    .options:hover > ul.dropdown-menu 
      display: block
      top: 2.2em
  
  .expand 
    text-decoration: none
    font-weight: bold
    position: absolute
    top: .6em
    right: 5em
    padding: .5em
  
  .expand.fa-angle-up:hover,
  .expand.fa-angle-down:hover
  
    border: dashed 1px red
  
  .expand.collapsed 
    border: dashed 1px #777
  
  div.title 
    display: block
    font-size: 1.4em
    color: black
    min-width: 40%
    margin: -5px 5em 0 20px
    line-height: 1.75
  
  div.title:focus 
      outline: none
  
  p 
    margin: .5em .5em .5em 20px
    opacity: .8
    font-size: 1.2em
    color: black
  
  a 
    cursor: pointer
  
  .thumb 
    margin: -15px 0 0 25px
  
  .badge 
    margin-right: .1em
    
  .dropdown-menu
    margin-top: -2px

.note-item.hasHiddenChildren
  .handle
    background-color: #d2d5ff

.note .fa-heart.hover 
    color: #f78a09
    opacity: .7

.note.favorite > .noteContainer .fa-heart, .note:hover.favorite > .noteContainer .fa-heart 
    color: #f78a09
    opacity: 1


.note.shared .fa-ellipsis-v 
  border-color: purple


.tagLink, .atLink
  border-width: 1px
  padding: .1em .25em 
  border-radius: 10px
  border-style: solid
  box-shadow: 1px 1px 2px #8e8e8e

.tagLink:hover, .atLink:hover 
  box-shadow: 2px 2px 3px #8e8e8e

.tag-red
  border-color: #FF2020
  background-color: rgba(255, 0, 0, 0.1)
.tag-orange  
  border-color: #FFD8B5 
  background-color: rgba(255, 216, 181, 0.22)
.tag-yellow  
  border-color: #FFFAB5
  background-color: rgba(255, 250, 181, 0.22)
.tag-lime  
  border-color: #E1FFB5 
  background-color: rgba(225, 255, 181, 0.26)
.tag-olive  
  border-color: #B5FFC9 
  background-color: rgba(181, 255, 201, 0.25)
.tag-green  
  border-color: #CCFFB5 
  background-color: rgba(204, 255, 181, 0.24)
.tag-teal  
  border-color: #B5FFD7 
  background-color: rgba(181, 255, 215, 0.21)
.tag-aqua  
  border-color: #B5FFFC 
  background-color: rgba(181, 255, 252, 0.31)
.tag-blue  
  border-color: #B5E8FF 
  background-color: rgba(181, 232, 255, 0.2)
.tag-navy  
  border-color: #3f34ff
  background-color: rgba(63, 52, 255, 0.15)
.tag-fuchia  
  border-color: #F1B5FF 
  background-color: rgba(241, 181, 255, 0.22)
.tag-purple  
  border-color: #D3B5FF 
  background-color: rgba(211, 181, 255, 0.25)
.tag-maroon  
  border-color: #C08F8F 
  background-color: rgba(192, 143, 143, 0.16)
.tag-silver  
  border-color: silver 
  background-color: rgba(192, 192, 192, 0.22)
.tag-gray  
  border-color: gray 
.tag-complete, .tag-done, .tag-finished 
  .title 
    text-decoration: line-through
    opacity: .5
  
#preview
  position:absolute
  border:1px solid #ccc
  background:#333
  padding:5px
  display:none
  color:#fff
  max-width: 400px
  img 
    width: 100%

.note-item.shared
  .handle
    background: rgba(0, 128, 28, 0.16)

