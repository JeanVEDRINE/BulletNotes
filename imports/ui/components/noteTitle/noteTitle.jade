template(name='noteTitle')
  .noteTitle(class=className)
    if encryptedRoot
      i.glyphicon.glyphicon-eye-close.encryptedIcon(title='This note is encrypted')
    if displayEncrypted
      div(class='encryptedTitle')
    else
      if editable
        div(class='title', contenteditable='true')
      else
        div(class='title')
