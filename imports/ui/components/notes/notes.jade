template(name='notes')
  .row.mt.mb
    .col-md-12
      section.task-panel.tasks-widget
        .panel-heading
          .pull-left
            h5
              i.fa.fa-tasks
              |  {{focusedNoteTitle}}
          br
        .panel-body
          .task-content
            #notes.task-list
              each notes
                +note
            #new-note(contenteditable='true') {{newNoteText}}
