#notes 
  list-style-type: none
  margin: 2em 0 0
  padding: 0
  width: 100%

.note 
  border-left: solid 4px
  font-size: 12px
  padding: 0px
  position: relative
  background: #f5f6f8
  margin-bottom: 2px
  border-bottom: none !important
  .progress 
    margin: 10px 0 0
  
  .noteContainer 
    padding: 10px 0 10px 35px
  
  .options:hover > ul.dropdown-menu 
    display: block
    top: 2.2em
  
  .expand 
    text-decoration: none
    font-weight: bold
    position: absolute
    left: 2.25em
    margin-top: 1px
  
  .expand.fa-angle-up:hover,
  .expand.fa-angle-down:hover
  
    border: dashed 1px red
  
  .expand.collapsed 
    border: dashed 1px #777
  
  .fa.fa-ellipsis-v 
    position: absolute
    left: 5px
    padding: 4px 9px
    cursor: move
    border-radius: 10px
    border: dashed 1px rgba(255, 255, 255, 0)
  
  .fa-ellipsis-v:hover 
    //background-color: #ccc
    border: dashed 1px red
  
  .fa.fa-arrows 
    position: absolute
    left: 25px
  
  div.title 
    display: block
    font-size: 1.4em
    color: black
    min-width: 40%
    margin: -5px 0 0 20px
  
  div.title:focus 
      outline: none
  
  p 
    margin: .5em .5em .5em 20px
    opacity: .8
    font-size: 1.2em
    color: black
  
  a 
    cursor: pointer
  
  .fa-heart 
    margin: 0 1em
    opacity: 0
    cursor: pointer
    z-index: 10
    position: relative
  
  .thumb 
    margin: -15px 0 0 25px
  
  .badge 
    margin-right: 1em
  

.note:hover > .noteContainer .fa-heart 
    opacity: .5

.note .fa-heart:hover 
    color: #f78a09
    opacity: .7

.note.favorite > .noteContainer .fa-heart, .note:hover.favorite > .noteContainer .fa-heart 
    color: #f78a09
    opacity: 1


.note.shared .fa-ellipsis-v 
  border-color: purple


.tagLink, .atLink
  border-width: 1px
  padding: .25em 
  border-radius: 10px
  border-style: solid
  box-shadow: 1px 1px 2px #8e8e8e

.tagLink:hover, .atLink:hover 
  box-shadow: 2px 2px 3px #8e8e8e

